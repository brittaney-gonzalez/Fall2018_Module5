extends layout

block content

  h1 Genre: #{genre.name}
  p #{genre.date_of_birth} - #{genre.date_of_death}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
    each book in Genre_books
      dt
        a(href=book.url) #{book.title}
      dd #{book.summary}

    else
      p This Genre has no books.
